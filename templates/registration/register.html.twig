{% extends 'base.html.twig' %} {% block title %}Inscription{% endblock %} {% block
body %} {% include "header/header.html.twig" %} {% for flash_error in
app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

<section class="bg-gray-900 font-Trykker">
  <div
    class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0 max-[480px]:h-screen"
  >
  {{ form_errors(registrationForm) }}

  {{ form_start(registrationForm) }}
    <div
      class="w-full rounded-lg shadow border md:mt-0 sm:max-w-md xl:p-0 bg-gray-800 border-gray-700"
    >
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1
          class="text-xl font-bold leading-tight tracking-tight md:text-2xl text-white"
        >
          Création de compte
        </h1>
        <form class="space-y-4 md:space-y-6" action="">
          <div>
            {{
              form_label(registrationForm.email, "Adresse Mail", {
                label_attr: { class: "block mb-2 text-sm font-medium text-white" }
              })
            }}
            {{
              form_widget(registrationForm.email, {
                attr: {
                  class:
                    "border sm:text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "exemple@mail.com"
                }
              })
            }}
          </div>
          <div>
            {{
              form_label(registrationForm.plainPassword, "Mot de passe", {
                label_attr: { class: "block mb-2 text-sm font-medium text-white" }
              })
            }}
            {{
              form_widget(registrationForm.plainPassword, {
                attr: {
                  class:
                    "border sm:text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "••••••••"
                }
              })
            }}
          </div>
          {{
            form_row(registrationForm.agreeTerms, {
              label: "Accepter les conditions d'utilisations",
              label_attr: { class: "text-white" }
            })
          }}
          <button
            type="submit"
            class="w-full text-white focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-primary-600 hover:bg-primary-700 focus:ring-primary-800"
          >
            Créer un compte
          </button>
          {{ form_end(registrationForm) }}
          <p class="text-sm font-light text-gray-500 dark:text-gray-400">
            Déjà un compte ?
            <a
              href="{{ path('app_login') }}"
              class="font-medium text-primary-600 hover:underline dark:text-primary-500"
              >Connectez-vous !</a
            >
          </p>
        </form>
      </div>
    </div>
  </div>
</section>
</form>
{% include "footer/footer.html.twig" %}
{% endblock %}
